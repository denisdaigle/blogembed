<div data-controller="yesNoPopup">
    
    <div data-target="yesNoPopup.popup" style="opacity:1;" class="fixed bottom-0 left-0 ml-4 mb-4 bg-gray-100 border border-gray-400 text-gray-700 px-4 py-3 rounded w-full md:w-1/3" role="alert">
      
      <div>
          <div>
              <span class="block sm:inline" data-target="yesNoPopup.message"><%= @question %></span>

<div class="mx-auto mt-2 py-8 px-8 w-full sm:w-full md:w-1/2 lg:w-1/2">
    
    <div class="text-right">
        <a href="/create_blog_and_post" class="inline-block text-md px-4 py-2 leading-none border rounded text-gray-500 border-gray-500 hover:border-gray-900 hover:text-gray-900 hover:text-gray-900 mt-4 lg:mt-4"><span class="uppercase tracking-widest text-sm">add blog</span></a>
    </div>
    
    <% if @blogs.present? %>
    
        <% @blogs.each do |blog| %>
            
            <div class="mb-8">
                
                <div id="blog_<%= blog[0]["blog_uid"] %>_details_editor">
                    <%= render 'blog_details', :blog_details => blog[0] %>
                </div>
                
                <% blog[1].each do |blog_post| %>
                    
                    <div class="mt-4">
                        <a href="/post?uid=<%= blog_post["post_uid"] %>">
                            <div class="max-w-sm w-full lg:max-w-full lg:flex hover:shadow-md">
                              <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover border-r-none border-b border-l border-gray-400 lg:border-l lg:border-t lg:border-gray-400 rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('<%= image_path("post_type_1.jpg") %>')" title="post_type_1">
                              </div>
                              <div class="w-full border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
                                <div class="mb-8">
                                  <div class="text-gray-900 font-bold text-xl mb-2"><%= blog_post["post_title"] %></div>
                                  <p class="text-gray-700 text-base"><%= blog_post["post_content_preview"] %></p>
                                </div>
                              </div>
                            </div>                
                        </a>
                    </div>
                    
                <% end %>
                
            </div>
            
        <% end %>
        
    <% else %>
        
        <div class="mt-16">
            <p class="mt-2 text-center">...here is where it all starts. <br/>Create your first blog and post!</p>
        </div>
        <div class="mt-10 text-center">
            <a href="/create_blog_and_post" class="inline-block text-md px-4 py-2 leading-none border rounded text-gray-900 border-gray-900 hover:border-transparent hover:text-gray-100 hover:bg-black mt-4 lg:mt-4 mr-4">Let's do it</a>
        </div>

    <% end %>
    
</div>

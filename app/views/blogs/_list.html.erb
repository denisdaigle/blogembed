<div class="mx-auto mt-2 py-8 px-8 w-full sm:w-full md:w-2/3 lg:w-2/3">

    <% if @blogs.present? %>
    
        <div class="text-right">
            <a href="/create_blog_and_post" class="inline-block text-md px-4 py-2 leading-none border rounded text-gray-500 border-gray-500 hover:border-gray-900 hover:text-gray-900 hover:text-gray-900 mt-4 lg:mt-4"><span class="uppercase tracking-widest text-sm">add blog</span></a>
        </div>
    
        <% @blogs.each do |blog| %>
            
            <div class="mb-8">
                
                <div id="blog_<%= blog[0]["blog_uid"] %>_details">
                    <%= render 'blog_details', :blog_details => blog[0] %>
                </div>
                
                <% blog[1].each do |blog_post| %>
                    
                    <div class="mt-4">
                        <a href="/post?uid=<%= blog_post["post_uid"] %>">
                            <div class="max-w-sm w-full lg:max-w-full lg:flex hover:shadow-md">
                              <div class="hidden h-48 lg:h-auto lg:w-48 flex-none bg-cover border-r-none border-b border-l border-gray-400 lg:border-l lg:border-t lg:border-gray-400 rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('<%= image_path("post_type_1.jpg") %>')" title="post_type_1">
                              </div>
                              <div class="overflow-hidden w-full border rounded border-gray-400 bg-white  p-4 flex flex-col justify-between leading-normal">
                                <div class="mb-8">
                                  <div class="text-gray-900 font-bold text-xl mb-2"><%= blog_post["post_title"] %></div>
                                  <p class="text-gray-700 text-base"><%= simple_format(strip_tags(blog_post["post_content_preview"]))  %></p>
                                </div>
                                
                                <% if blog_post["post_status"] == "live" %>
                                
                                    <div class="relative">
                            			<div class="absolute right-0 bg-blue-500 w-40 h-40 z-50" style="transform: rotate(-45deg);margin-top:-40px;margin-right:-120px;">
                            				<div class="px-1 py-1 text-center">
                            					<span class="text-white"><%= blog_post["post_status"] %></span>
                            				</div>
                            			</div>
                            		</div>
                                
                                <% else %>
                                    
                                    <div class="relative">
                            			<div class="absolute right-0 bg-gray-500 w-40 h-40 z-50" style="transform: rotate(-45deg);margin-top:-40px;margin-right:-120px;">
                            				<div class="px-1 py-1 text-center">
                            					<span class="text-white"><%= blog_post["post_status"] %></span>
                            				</div>
                            			</div>
                            		</div>
                                    
                                <% end %>
                                
		
                              </div>
                            </div>                
                        </a>
                    </div>
                    
                <% end %>
                
            </div>
            
        <% end %>
        
    <% else %>
        
        <div class="mb-64">
            
            <div class="mt-16">
                <p class="mt-2 text-center">...here is where it all starts. <br/>Create your first blog and post!</p>
            </div>
            <div class="mt-10 text-center">
                <a href="/create_blog_and_post" class="inline-block text-md px-4 py-2 leading-none border rounded text-gray-900 border-gray-900 hover:border-transparent hover:text-gray-100 hover:bg-black mt-4 lg:mt-4 mr-4">Let's do it</a>
            </div>
            
        </div>
        
    <% end %>
    
</div>

<% if @post.present? %>
    
    <%= @post %>

<% else %>

  <% if @reason.present? && @reason == "draft_mode" %>
  
    <div class="border-dashed border-4 border-yellow-500 px-4 py-4 text-center">
        <div class=""><span class="text-2xl text-gray-800 font-bold">Content is being updated</span></div>
        <div class="mt-2"><span class="text-xl text-gray-800"><%= @error_message %></span></div>
    </div>
  
  <% elsif @reason.present? && @reason == "not_found" %>
  
    <div class="border-dashed border-4 border-gray-500 px-4 py-4 text-center">
        <div class=""><span class="text-2xl text-gray-800 font-bold">Content is missing</span></div>
        <div class="mt-2"><span class="text-xl text-gray-800"><%= @error_message %></span></div>
    </div>
  
  <% else %>
      
    <div class="border-dashed border-4 border-red-500 px-4 py-4 text-center">
        <div class=""><span class="text-2xl text-gray-800 font-bold">Content is protected</span></div>
        <div class="mt-2"><span class="text-xl text-gray-800"><%= @error_message %> <a class="" href="<%= Rails.configuration.access_point["webserver_domain"]%>" target="_new"><span class="underline text-blue-500">blogembed.com</span></a></span></div>
    </div>
      
  <% end %>

<% end %>
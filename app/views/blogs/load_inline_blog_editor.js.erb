<% if @result == "success" %>
    document.getElementById('blog_<%= @blog_details["blog_uid"] %>_details').innerHTML = "<%= j render 'blog_details_editor' %>";
<% else %>
    //show an error message as an info popup.
    <% @info = @error_message %>
    document.getElementById('popup_holder').innerHTML = "<%= j render 'info_popup' %>";
<% end %>
<% if @result == "success" %>
    //replace main_working_area with create form.
    document.getElementById('blog_<%= @blog_details["blog_uid"] %>_details').innerHTML = "<%= j render 'blog_details', :blog_details => @blog_details %>";
<% else %>
    //show an error message as an info popup.
    <% @info = @error_message %>
    document.getElementById('popup_holder').innerHTML = "<%= j render 'info_popup' %>";
<% end %>
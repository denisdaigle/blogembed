<% if @result == "success" %>
          
 //replace main_working_area with create form.
 document.getElementById('main_working_area').innerHTML = "<%= j render 'post' %>";

<% else %>

  //show an error message.
  document.getElementById('createBlogAndPostForm_processingMessageHolder').classList.add("hidden");
  document.getElementById('createBlogAndPostForm_form').classList.remove("hidden");
  document.getElementById('createBlogAndPostForm_errorMessageHolder').classList.remove("hidden");
  document.getElementById('createBlogAndPostForm_errorMessage').textContent = '<%= @error_message %>';
  document.getElementById('createBlogAndPostForm_errorMessage').classList.remove("hidden");
  
<% end %>
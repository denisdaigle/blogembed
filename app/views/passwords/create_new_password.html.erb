<div class="py-8 px-8 flex w-full sm:w-full md:w-1/2 lg:w-1/2 mx-auto mt-16">
  
  <div class="mx-auto">
    
    <div class="flex -ml-2">
      <img src="<%= image_path('logo-1.svg') %>" style="height:70px;"/>
      <p class="text-5xl">BlogEmbed</p>
    </div>

    <p class="text-lg text-gray-800 mt-4">Set your new password</p>
    
    <div data-controller="setNewPasswordForm" class="mt-8">
  
      <%= form_tag process_new_password_path(), 'data-target' => "setNewPasswordForm.form", :method => :post, :id => "setNewPasswordForm_form", :authenticity_token => true, :remote => true do %>
    	  
    	  <%= hidden_field_tag :password_reset_code, :params[:password_reset_code] %>

    	  <div class="w-full max-w-lg">
    	    
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="password">
                New password
              </label>
              <input id="password" name="password" data-target="setNewPasswordForm.passwordInput" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="password" placeholder="*****************">
              <p class="text-red-500 text-xs italic hidden" data-target="setNewPasswordForm.passwordError"></p>
            </div>
          </div>
          
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
              <div class="">
                <%= submit_tag "set", 'data-action' => 'click->setNewPasswordForm#set', :class => "shadow bg-gray-700 hover:bg-gray-900 focus:bg-gray-900 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded", :id => "setNewPasswordForm_submit_button" %>
              </div>
            </div>
          </div>
          
        </div>

      <% end %>
      
      <div class="flex hidden py-10 hidden" data-target="setNewPasswordForm.errorMessageHolder" id="setNewPasswordForm_errorMessageHolder">
        
        <div class="">
          <span data-target="setNewPasswordForm.errorMessage" id="setNewPasswordForm_errorMessage" class="text-red-500 text-md">

          </span>
        </div>
        
      </div>
      
      <div class="flex hidden py-10" data-target="setNewPasswordForm.processingMessageHolder" id="setNewPasswordForm_processingMessageHolder">
        
        <div class="">
          <span data-target="setNewPasswordForm.processingMessage" id="setNewPasswordForm_processingMessage" class="text-gray-700 text-md">

          </span>
        </div>
        
        <div class="mt-3 ml-1">
          <img src="<%= image_path('dots.svg') %>"/>
        </div>
        
      </div>
      
    </div>

  </div>
  
</div>





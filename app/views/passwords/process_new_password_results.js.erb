<% if @result == "success" %>

  //Logged in, send to blogs.
  window.location = '<%= Rails.configuration.access_point["webserver_domain"]%>/blogs?broadcast_message=<%= @broadcast_message %>'  

<% else %>

  //show the error message.
  document.getElementById('setNewPasswordForm_processingMessageHolder').classList.add("hidden");
  document.getElementById('setNewPasswordForm_form').classList.remove("hidden");
  document.getElementById('setNewPasswordForm_errorMessageHolder').classList.remove("hidden");
  document.getElementById('setNewPasswordForm_errorMessage').textContent = '<%= @error_message %>';
  document.getElementById('setNewPasswordForm_errorMessage').classList.remove("hidden");
  
<% end %>
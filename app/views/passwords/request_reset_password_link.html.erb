<div class="py-8 px-8 flex w-full sm:w-full md:w-1/2 lg:w-1/2 mx-auto mt-16">
  
  <div class="mx-auto">
    
    <div class="flex -ml-2">
      <img src="<%= image_path('logo-1.svg') %>" style="height:70px;"/>
      <p class="text-5xl">BlogEmbed</p>
    </div>

    <p class="text-lg text-gray-800 mt-4">Request a password reset link</p>
    
    <div data-controller="passwordResetRequestForm" class="mt-8">
  
      <%= form_tag process_password_reset_link_request_path(), 'data-target' => "passwordResetRequestForm.form", :method => :post, :id => "passwordResetRequestForm_form", :authenticity_token => true, :remote => true do %>
    	  
    	  <div class="w-full max-w-lg">
    	    
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="email">
                Email
              </label>
              <input id="email" name="email" data-target="passwordResetRequestForm.emailInput" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="your@email.com">
              <p class="text-red-500 text-xs italic hidden" data-target="passwordResetRequestForm.emailError"></p>
            </div>
          </div>
          
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
              <div class="">
                <%= submit_tag "request", 'data-action' => 'click->passwordResetRequestForm#request', :class => "shadow bg-gray-700 hover:bg-gray-900 focus:bg-gray-900 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded", :id => "passwordResetRequestForm_submit_button" %>
              </div>
            </div>
          </div>
          
        </div>

      <% end %>
      
      <div class="flex hidden py-10 hidden" data-target="passwordResetRequestForm.errorMessageHolder" id="passwordResetRequestForm_errorMessageHolder">
        
        <div class="">
          <span data-target="passwordResetRequestForm.errorMessage" id="passwordResetRequestForm_errorMessage" class="text-red-500 text-xl">

          </span>
        </div>
        
      </div>
      
      <div class="flex hidden py-10" data-target="passwordResetRequestForm.processingMessageHolder" id="passwordResetRequestForm_processingMessageHolder">
        
        <div class="">
          <span data-target="passwordResetRequestForm.processingMessage" id="passwordResetRequestForm_processingMessage" class="text-gray-700 text-xl">

          </span>
        </div>
        
        <div class="mt-5 ml-1">
          <img src="<%= image_path('dots.svg') %>"/>
        </div>
        
      </div>
      
    </div>

  </div>
  
</div>





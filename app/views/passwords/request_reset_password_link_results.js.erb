<% if @result == "success" %>
          
  //show the success message.
  document.getElementById('passwordResetRequestForm_processingMessage').textContent = '<%= @success_message %>';

<% else %>

  //show the error message.
  document.getElementById('passwordResetRequestForm_processingMessageHolder').classList.add("hidden");
  document.getElementById('passwordResetRequestForm_form').classList.remove("hidden");
  document.getElementById('passwordResetRequestForm_errorMessageHolder').classList.remove("hidden");
  document.getElementById('passwordResetRequestForm_errorMessage').textContent = '<%= @error_message %>';
  document.getElementById('passwordResetRequestForm_errorMessage').classList.remove("hidden");
  
<% end %>
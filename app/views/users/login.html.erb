<div class="py-8 px-8 flex w-full sm:w-full md:w-1/2 lg:w-1/2 mx-auto mt-16">
  
  <div class="mx-auto">
    
    <div class="flex -ml-2">
      <img src="<%= image_path('logo-1.svg') %>" style="height:70px;"/>
      <p class="text-5xl">BlogEmbed</p>
    </div>

    <p class="text-lg text-gray-800 mt-4">Welcome back!</p>
    
    <div data-controller="loginForm" class="mt-8">
  
      <%= form_tag process_login_path(), 'data-target' => "loginForm.form", :method => :post, :id => "loginForm_form", :authenticity_token => true, :remote => true do %>
    	  
    	  <div class="w-full max-w-lg">
    	    
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="email">
                Email
              </label>
              <input id="email" name="email" data-target="loginForm.emailInput" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="your@email.com">
              <p class="text-red-500 text-xs italic hidden" data-target="loginForm.emailError"></p>
            </div>
          </div>
          
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
              <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="password">
                Password
              </label>
              <input id="password" name="password" data-target="loginForm.passwordInput" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="password" placeholder="******************">
              <p class="text-red-500 text-xs italic hidden" data-target="loginForm.passwordError"></p>
            </div>
          </div>
          
          <div class="flex flex-wrap -mx-3 mb-6">
            <div class="px-3">
              <div class="">
                <%= submit_tag "log in", 'data-action' => 'click->loginForm#login', :class => "shadow bg-gray-700 hover:bg-gray-900 focus:bg-gray-900 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded", :id => "login_submit_button" %>
              </div>
            </div>
            <div class="px-3 mt-2">
              <div class="">
                <a href="/forgot_password">Forgot it?</a>
              </div>
            </div>
          </div>
          
        </div>

      <% end %>
      
      <div class="flex hidden py-10 hidden" data-target="loginForm.errorMessageHolder" id="loginForm_errorMessageHolder">
        
        <div class="">
          <span data-target="loginForm.errorMessage" id="loginForm_errorMessage" class="text-red-500 text-md">

          </span>
        </div>
        
      </div>
      
      <div class="flex hidden py-10" data-target="loginForm.processingMessageHolder" id="loginForm_processingMessageHolder">
        
        <div class="">
          <span data-target="loginForm.processingMessage" id="loginForm_processingMessage"class="text-gray-700 text-md">

          </span>
        </div>
        
        <div class="mt-3 ml-1">
          <img src="<%= image_path('dots.svg') %>"/>
        </div>
        
      </div>
      
    </div>

  </div>
  
</div>





<div class="py-8 px-8 flex w-full sm:w-full md:w-1/2 lg:w-1/2 mx-auto mt-16">
  
  <div class="mx-auto">
    
    <div class="flex -ml-2">
      <img src="<%= image_path('logo-1.svg') %>" style="height:70px;"/>
      <p class="text-5xl">BlogEmbed</p>
    </div>
      
    <p class="text-lg text-gray-800 mt-4">Alright! Let's set up your profile and get this going!</p>

    <% if @result == "success" %>
        
        <div data-controller="profile_setup" class="mt-8">
  
          <%= form_tag user_profile_setup_path(), 'data-target' => "profile_setup.form", :method => :post, :id => "profile_setup_form", :authenticity_token => true, :remote => true do %>
        	 
        	  <div class="w-full max-w-lg">
        	    
              <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                  <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="first_name">
                    First Name
                  </label>
                  <input id="first_name" name="first_name" data-target="profile_setup.first_name_input" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="Jane">
                  <p class="text-red-500 text-xs italic hidden" data-target="profile_setup.first_name_error">Please fill out this field.</p>
                </div>
                <div class="w-full md:w-1/2 px-3">
                  <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="last_name">
                    Last Name
                  </label>
                  <input id="last_name" name="last_name" data-target="profile_setup.last_name_input" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="Doe">
                  <p class="text-red-500 text-xs italic hidden" data-target="profile_setup.last_name_error">Please fill out this field.</p>
                </div>
              </div>
              
              <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                  <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="password">
                    Password
                  </label>
                  <input id="password" name="password" data-target="profile_setup.password_input" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="password" placeholder="******************">
                  <p class="text-red-500 text-xs italic hidden" data-target="profile_setup.password_error">Make it strong</p>
                </div>
              </div>
              
              <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                  <div class="">
                    <%= submit_tag "Continue", 'data-action' => 'click->profile_setup#submit', :class => "shadow bg-gray-700 hover:bg-gray-900 focus:bg-gray-900 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded", :id => "connect_submit_button" %>
                  </div>
                </div>
              </div>
              
            </div>

          <% end %>
          
          <span data-target="profile_setup.thankyou" class="text-gray-700 py-10 text-xl">
    
          </span>
          
        </div>
        
    <% else %>
    
        <span class="text-red-500 text-xs italic"><%= @error_message %></span>. <a href="/login" class="text-blue-500">Take me to the login page</a>.
        
    <% end %>

  </div>
  
</div>





<% if @result == "success" %>
          
  document.getElementById('server_check').classList.remove("hidden");

<% else %>
  
  document.getElementById('signUp_thankyou').textContent = '';
  document.getElementById('signUp_form').classList.remove("hidden");
  document.getElementById('signUp_error').classList.remove("hidden");
  document.getElementById('signUp_error').textContent = '<%= @error_message %>';

<% end %>


